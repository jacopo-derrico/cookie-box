{
    "name": "CookieBox",
    "description": "Check how many cookies a website uses, their expiration date and what they do. Take control of what is stored on your device.",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "cookies",
        "search"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    }
}